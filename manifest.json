{
    "name":"Make Facebook Great Again",
    "version":"0.0.1",
    "manifest_version":2,
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "background": {
            "scripts": ["background.js"],
            "persistent":false
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/"],
            "js": ["content-script.js"]
        }
    ],
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "Make Facebook Great Again"
    }
}