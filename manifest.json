{
    "name":"Make Facebook Great Again",
    "version":"1.0.0",
    "manifest_version":2,
    "description": "Tired of posts about politics clogging up your newsfeed? So are we. Cover them with beer with this awesome extension!",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "icons": {
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "60": "icons/logo60.png",
        "128": "icons/logo128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/"],
            "js": ["content-script.js"]
        }
    ],
    "page_action": {
        "default_icon": "icons/logo60.png",
        "default_title": "Make Facebook Great Again"
    }
}
